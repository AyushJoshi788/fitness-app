# Firebase Configuration
# Get these values from Firebase Console: https://console.firebase.google.com

# Project ID
VITE_FIREBASE_PROJECT_ID=your-project-id

# API Key
VITE_FIREBASE_API_KEY=your-api-key

# Auth Domain
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Database URL (for Firestore)
VITE_FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Storage Bucket
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id

# App ID
VITE_FIREBASE_APP_ID=your-app-id

# Measurement ID (Optional, for Analytics)
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Google OAuth Web Client ID (for Google Sign-In)
# Get this from: GCP Console > APIs & Services > Credentials
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Payment Integration (Razorpay)
VITE_RAZORPAY_KEY_ID=your-razorpay-key-id
VITE_RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Payment Integration (Stripe - Alternative)
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
VITE_STRIPE_SECRET_KEY=your-stripe-secret-key

# App Environment
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0
